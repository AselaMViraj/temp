<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro"/>

    <!-- MATERIALS -->
    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <material name="aluminum">
        <color rgba="0.75 0.75 0.75 1"/>
    </material>

    <material name="matte_black">
        <color rgba="0.1 0.1 0.1 1"/>
    </material>

    <material name="dark_ash">
        <color rgba="0.3 0.3 0.3 1"/>
    </material>


    <link name="base_link">
        <inertial>
            <mass value="0.001"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
        </inertial>
    </link>

    <link name="base_footprint">
    </link>

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0 0 0.081"/> <!-- Lowered from 0.117 to align 64mm wheels --> 
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://cleaning_robot_description/meshes/chassis_link.stl"/>
            </geometry>
            <material name="aluminum"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.12" rpy="0 0 0"/>
            <geometry>
                <box size="0.6 0.4 0.2"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="7.8" x="0.6" y="0.4" z="0.2">
            <origin xyz="0 0 0.12" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>
    <gazebo reference="chassis">
        <material>Gazebo/Grey</material>
    </gazebo>

    <!-- RIGHT WHEEL -->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="right_wheel"/>
        <origin xyz="2.8314E-05 -0.347 -0.017" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://cleaning_robot_description/meshes/right_motor_link.stl"/>
            </geometry>
             <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="1.57079 0 0"/>
            <geometry>
                <cylinder radius="0.064" length="0.063"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.6" length="0.063" radius="0.064">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="right_wheel">
        <material>Gazebo/Black</material>
        <mu1>2.0</mu1>
        <mu2>2.0</mu2>
        <kp>10000000.0</kp>
        <kd>1.0</kd>
    </gazebo>

    <!-- LEFT WHEEL -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="left_wheel"/>
        <origin xyz="2.8314E-05 0.347 -0.017" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="left_wheel">
         <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://cleaning_robot_description/meshes/left_motor_link.stl"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="1.57079 0 0"/>
            <geometry>
                <cylinder radius="0.064" length="0.063"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.6" length="0.063" radius="0.064">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
     <gazebo reference="left_wheel">
        <material>Gazebo/Black</material>
        <mu1>2.0</mu1>
        <mu2>2.0</mu2>
        <kp>10000000.0</kp>
        <kd>1.0</kd>
    </gazebo>

    <!-- CASTERS -->
    <!-- Front Left -->
    <joint name="front_left_caster_joint" type="fixed">
         <parent link="chassis"/>
         <child link="front_left_caster"/>
         <origin xyz="0.23102 0.254 -0.0189" rpy="0 0 0"/>
    </joint>
    <link name="front_left_caster">
         <visual>
            <geometry>
                <mesh filename="package://cleaning_robot_description/meshes/front_left_caster_link.stl"/>
            </geometry>
            <material name="dark_ash"/>
         </visual>
         <collision>
            <origin xyz="0 0 -0.03" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.031"/>
            </geometry>
        </collision>
         <inertial>
            <origin xyz="0.0088 -0.006 -0.039" rpy="0 0 0"/>
            <mass value="0.1"/>
            <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
         </inertial>
    </link>
    <gazebo reference="front_left_caster">
        <material>Gazebo/DarkGrey</material>
        <mu1>0.05</mu1>
        <mu2>0.05</mu2>
        <kp>1000000.0</kp>
        <kd>1.0</kd>
    </gazebo>

    <!-- Front Right -->
    <joint name="front_right_caster_joint" type="fixed">
         <parent link="chassis"/>
         <child link="front_right_caster"/>
         <origin xyz="0.23103 -0.254 -0.0189" rpy="0 0 0"/>
    </joint>
    <link name="front_right_caster">
         <visual>
            <geometry>
                <mesh filename="package://cleaning_robot_description/meshes/front_right_caster_link.stl"/>
            </geometry>
             <material name="dark_ash"/>
         </visual>
          <collision>
            <origin xyz="0 0 -0.03" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.031"/>
            </geometry>
         </collision>
         <inertial>
            <origin xyz="0.0107 0 -0.039" rpy="0 0 0"/>
             <mass value="0.1"/>
            <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
         </inertial>
    </link>
    <gazebo reference="front_right_caster">
        <material>Gazebo/DarkGrey</material>
        <mu1>0.05</mu1>
        <mu2>0.05</mu2>
        <kp>1000000.0</kp>
        <kd>1.0</kd>
    </gazebo>

    <!-- Back Left -->
    <joint name="back_left_caster_joint" type="fixed">
         <parent link="chassis"/>
         <child link="back_left_caster"/>
         <origin xyz="-0.23097 0.254 -0.0189" rpy="0 0 0"/>
    </joint>
    <link name="back_left_caster">
         <visual>
            <geometry>
                <mesh filename="package://cleaning_robot_description/meshes/back_left_caster_link.stl"/>
            </geometry>
             <material name="dark_ash"/>
         </visual>
          <collision>
            <origin xyz="0 0 -0.03" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.031"/>
            </geometry>
         </collision>
         <inertial>
            <origin xyz="-0.0107 0 -0.039" rpy="0 0 0"/>
            <mass value="0.1"/>
            <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
         </inertial>
    </link>
    <gazebo reference="back_left_caster">
        <material>Gazebo/DarkGrey</material>
        <mu1>0.05</mu1>
        <mu2>0.05</mu2>
        <kp>1000000.0</kp>
        <kd>1.0</kd>
    </gazebo>

    <!-- Back Right -->
    <joint name="back_right_caster_joint" type="fixed">
         <parent link="chassis"/>
         <child link="back_right_caster"/>
         <origin xyz="-0.23097 -0.254 -0.0189" rpy="0 0 0"/>
    </joint>
     <link name="back_right_caster">
         <visual>
            <geometry>
                <mesh filename="package://cleaning_robot_description/meshes/back_right_caster_link.stl"/>
            </geometry>
             <material name="dark_ash"/>
         </visual>
          <collision>
            <origin xyz="0 0 -0.03" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.031"/>
            </geometry>
         </collision>
         <inertial>
            <origin xyz="-0.0107 0 -0.039" rpy="0 0 0"/>
            <mass value="0.1"/>
            <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
         </inertial>
    </link>
    <gazebo reference="back_right_caster">
        <material>Gazebo/DarkGrey</material>
        <mu1>0.05</mu1>
        <mu2>0.05</mu2>
        <kp>1000000.0</kp>
        <kd>1.0</kd>
    </gazebo>

    <!-- Arm Mount -->
    <!-- Arm Mount -->
    <joint name="arm_mount_joint" type="fixed">
        <parent link="chassis"/>
        <child link="arm_mount_link"/>
        <origin xyz="0.23655 0 0.3785" rpy="0 0 0"/>
        <axis xyz="0 0 -1"/>
        <limit lower="0" upper="0.585" effort="100" velocity="0.5"/> 
    </joint>
    <link name="arm_mount_link">
          <visual>
            <geometry>
                <mesh filename="package://cleaning_robot_description/meshes/arm_mount_link.stl"/>
            </geometry>
             <material name="matte_black"/>
         </visual>
         <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.1 0.1 0.1"/>
            </geometry>
         </collision>
         <inertial>
            <origin xyz="0.0045 -0.002 0.097" rpy="0 0 0"/>
            <mass value="1.49"/>
            <inertia ixx="0.0034" ixy="-1.4E-6" ixz="-0.00013" iyy="0.0026" iyz="1.9E-7" izz="0.0022"/>
         </inertial>
    </link>
    <gazebo reference="arm_mount_link">
        <material>Gazebo/Black</material>
    </gazebo>

</robot>